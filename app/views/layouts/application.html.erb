<!DOCTYPE html>
<html>
  <head>
    <title>WeatherForecastApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
      <div class="container">
        <a class="navbar-brand" href="#">WeatherForecastApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <% if current_user %>
              <li class="nav-item <%= active_class?(root_path) %>">
                <%= link_to 'Home', root_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class?(locations_path) %>">
                <%= link_to 'Browse cities', locations_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class?(following_locations_path) %>">
                <%= link_to 'Subscribed', following_locations_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class?(account_settings_path) %>">
                <%= link_to 'Account settings', account_settings_path, class: 'nav-link'%>
              </li>
            <% end %>
            <li class="nav-item">
              <%= account_navigation %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container mt-3">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>

    <!-- Page Content -->
    <div class="container">
      <div class="vertical-center cover-container">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
