<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-inputs">

    <div class="form-group">
      <%= f.text_field(:email, class: "form-control", placeholder: t('sessions.form.email')) %>
    </div>

    <div class="form-group">
      <%= f.password_field(:password, class: "form-control", placeholder: t('sessions.form.password')) %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('sessions.form.create'), class: 'btn btn-success' %>
  </div>
<% end %>
