<%= form_for(@user, url: registrations_path) do |f| %>
  <%= render 'shared/errors', object: @user %>
  <div class="form-inputs">

    <div class="form-group">
      <%= f.label :email, class: "sr-only" %>
      <%= f.text_field(:email, class: "form-control", placeholder: "Email") %>
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    </div>

    <div class="form-group">
      <%= f.label :username, class: "sr-only" %>
      <%= f.text_field(:username, class: "form-control", placeholder: "Username") %>
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field(:password, type: "password", class: "form-control", placeholder: "Password") %>
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    </div>

    <div class="form-group">
      <%= f.label :confirm_password, class: "sr-only" %>
      <%= f.password_field(:password_confirmation, type: "password", class: "form-control", placeholder: "Confirm Password") %>
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('registrations.form.create'), class: 'btn btn-success' %>
  </div>
<% end %>
